class Runnable3 implements Runnable{
	public void run(){
		boolean frag=true;
		while(frag){
			for(int i=0;i<11;i++){
				if(i==10){
					frag=false;
				}
				System.out.println("---------------Runnable");
				try {
					Thread.sleep(1000);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
		}
	}
}
